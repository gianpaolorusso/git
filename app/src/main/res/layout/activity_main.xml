<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utente5academy.git.MainActivity">

    <ListView
        android:layout_margin="3px"
        android:layout_centerHorizontal="true"
        android:id="@+id/listapiena"
        android:layout_width="match_parent"
        android:layout_height="400px"></ListView>

    <Button
        android:text="move down"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listapiena" />

    <ListView android:layout_margin="3px"
        android:layout_centerHorizontal="true"
        android:id="@+id/listavuota"
        android:layout_below="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="400px">

    </ListView>

</RelativeLayout>
